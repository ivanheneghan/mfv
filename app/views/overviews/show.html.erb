<div class="booyah-box col-xs-10 col-xs-offset-1">   
  <% #display total %>
  Current value: <%= number_to_currency(@overview.current_value, :unit => "€") %>
  <br />

  <% #display future value total, before and after inflation %>
  Future value (not including inflation): <%= number_to_currency(@overview.future_value, :unit => "€") %>
  <br />
  Future value (including inflation): <%= number_to_currency(@overview.future_value_inflation, :unit => "€") %>
  <br /><br /><br />
  
  <%= form_tag overview_path, method: :put, id: 'slider_form' do %>
    <label for="overview_future_age">Age</label>
    <%= range_field(:overview, :future_age, 
       in: current_user.age..100,
       value: future_age,
       oninput: "outputUpdate(value)",
       step: 1
       )
    %>
    <output id="output_future_age"><%= future_age %></output>

    <%= submit_tag 'Set Age', :class => "btn btn-primary btn-md" %>
  <% end %>

  <br /><br /><br />

  <%= link_to 'Manage Bank Accounts', bank_accounts_path, :class => "btn btn-primary btn-md col-xs-3" %>
  <%= link_to 'Manage Investments', '#', :class => "btn btn-primary btn-md col-xs-3" %>
  <%= link_to 'Manage Shares', shares_path, :class => "btn btn-primary btn-md col-xs-3" %>
  <%= link_to 'Manage Pension', '#', :class => "btn btn-primary btn-md col-xs-3" %>  
</div>