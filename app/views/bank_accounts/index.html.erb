<h1>Manage Bank Accounts</h1>

  <% @bank_accounts.each do |bank_account| %>
    <div class="booyah-box col-xs-10 col-xs-offset-1">
      <%= link_to bank_account.name, bank_account_path(bank_account) %><br /><br />        
      <%= bank_account.institution %><br /><br />
      <%= bank_account.account_type %><br /><br />
      <%= bank_account.amount %><br /><br />
      <%= bank_account.interest_rate %>
    </div>
    <hr />
  <% end %>

<%= link_to 'New Bank account', new_bank_account_path %>